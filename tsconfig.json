{
    "compilerOptions": {
      "target": "ES2015",
      "module": "commonjs",
      "jsx": "react",
      "outDir": "build",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "strictFunctionTypes": false,
      "lib": ["es2015", "es2017"],
      "plugins": [
        {
          "name": "typescript-styled-plugin"
        }
      ],
      "noUnusedLocals": true,
      "noUnusedParameters": true
    },
    "exclude": [
      "node_modules"
    ]
  }
  